# Terraform Variables Configuration
# Copy this file to terraform.tfvars and fill in your values
# NEVER commit terraform.tfvars to Git (it contains secrets!)

# AWS Configuration
aws_region = "ap-southeast-1"  # Singapore region

# Project Configuration
project_name = "dhakacart"
environment  = "prod"  # or "dev", "staging"

# Network Configuration (usually don't need to change)
# vpc_cidr = "10.0.0.0/16"
# public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
# private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]

# EC2 Configuration
instance_type    = "t3.small"  # t3.micro for free tier, t3.small for better performance
# key_name is now auto-generated - no need to set it!
# Private key will be saved to: terraform/dhakacart-key.pem
min_instances    = 2
max_instances    = 10
desired_instances = 3

# Docker Images (from Docker Hub)
backend_docker_image  = "arifhossaincse22/dhakacart-backend:latest"
frontend_docker_image = "arifhossaincse22/dhakacart-frontend:latest"

# Database Configuration (Docker Container)
# NOTE: PostgreSQL runs as Docker container (simplified version)
# No RDS needed - works with basic EC2 permissions!
db_name     = "dhakacart_db"
db_user     = "dhakacart"
db_password = "dhakacart123"  # ⚠️ CHANGE THIS!

# Redis Configuration (Docker Container)
# NOTE: Redis runs as Docker container (simplified version)
# No ElastiCache needed - works with basic EC2 permissions!
# No additional configuration needed

